
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model QuanLyQuanAo_MVC_CORE.Models.Brand
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Xóa thông tin hãng</h4>
            <form class="forms-sample" action="DeleteBrandSubmit" method="post" enctype="multipart/form-data">
                <input type="text" value="@Model.Id" name="Id" hidden>
                <div class="form-group">
                    <label for="NamePro">Tên hãng</label>
                    <input type="text" class="form-control" id="NamePro" placeholder="Nhập tên sản phẩm" name="BrandName" value="@Model.BrandName">
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.BrandName)</div>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Xóa hãng</button>
                <a href="~/Admin/ProductManage/Index" class="btn btn-light">Trở về</a>
            </form>
        </div>
    </div>
</div>