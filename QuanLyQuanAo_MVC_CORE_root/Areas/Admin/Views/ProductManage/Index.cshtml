@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<QuanLyQuanAo_MVC_CORE.Models.Product>
<div class="content-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <a href="~/Admin/ProductManage/AddProduct" class="btn text-decoration-none btn-primary btn-md font-weight-medium d-inline-flex align-items-center m-2">
                <i class="mdi mdi-folder-plus">
                </i>
                Thêm mới sản phẩm
            </a>
        </div>
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Danh sách sản phẩm</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        STT
                                    </th>
                                    <th>
                                        Ảnh
                                    </th>
                                    <th>
                                        Mã Sản phẩm
                                    </th>
                                    <th>
                                        Tên sản phẩm
                                    </th>
                                    <th>
                                        Giá mới
                                    </th>
                                    <th>
                                        Số lượng
                                    </th>
                                    <th>
                                        Hành động
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    int counter = 1;
                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@counter</td>
                                        <td class="py-1">
                                            <img src="~/img/Product/@item.ImgUrl" alt="image" />
                                        </td>
                                        <td>
                                            @item.Id
                                        </td>
                                        <td>
                                            @item.ProductName
                                        </td>
                                        <td>
                                            @string.Format("{0:n0}", item.Price) đ
                                        </td>
                                        <td>
                                            @item.Amout
                                        </td>
                                        <td>
                                            <a href="~/Admin/ProductManage/EditProduct?proid=@item.Id" class="text-decoration-none btn btn-primary btn-rounded btn-icon d-inline-flex align-items-center justify-content-center">
                                                <i class="mdi mdi-border-color"></i>
                                            </a>
                                            <a href="~/Admin/ProductManage/DeleteProduct?proid=@item.Id" class="text-decoration-none btn btn-primary btn-rounded btn-icon d-inline-flex align-items-center justify-content-center">
                                                <i class="mdi mdi-delete"></i>
                                            </a>
                                        </td>
                                    </tr>
                                    counter++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="d-flex justify-content-end">
                        <ul class="pagination" style="display:flex;align-items: center;font-size:20px;gap:10px">
                            @if (ViewBag.PageNumber > 1)
                            {
                                <li>

                                    <a href="?page=1">&laquo;</a>
                                </li>
                                <li>
                                    <a href="?page=@(ViewBag.PageNumber - 1)">&lsaquo;</a>

                                </li>
                            }
                            @for (int i = 1; i <= ViewBag.TotalPages; i++)
                            {

                                if (i == ViewBag.PageNumber)
                                {
                                    <li style="background-color: black;color:white">
                                        <span>@i</span>

                                    </li>
                                }
                                else
                                {
                                    <li>
                                        <a href="?page=@i">@i</a>

                                    </li>
                                }
                            }
                            @if (ViewBag.PageNumber < ViewBag.TotalPages)
                            {
                                <li>

                                    <a href="?page=@(ViewBag.PageNumber + 1)"> &rsaquo;</a>
                                </li>
                                <li>

                                    <a href="?page=@ViewBag.TotalPages"> &raquo;</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>