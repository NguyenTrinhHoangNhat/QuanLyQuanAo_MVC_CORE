
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@model QuanLyQuanAo_MVC_CORE.Models.User
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Thêm người dùng </h4>
            <form class="forms-sample" action="EditUserSubmit" method="post" enctype="multipart/form-data">
            <input type="text" value="@Model.Id" name="Id" hidden>
                <div class="form-group">
                    <label for="NamePro">Tên người dùng </label>
                    <input type="text" class="form-control" id="NamePro" placeholder="vd: Nguyễn Văn A" name="Username" value="@Model.Username">
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.Username)</div>
                </div>
                <div class="form-group">
                    <label for="NamePro">Email </label>
                    <input type="text" class="form-control" id="NamePro" placeholder="vd: email@gmail.com" name="Email" value="@Model.Email">
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.Email)</div>
                </div>
                <div class="form-group">
                    <label for="NamePro">Số điện thoại </label>
                    <input type="text" class="form-control" id="NamePro" placeholder="vd: 0123456789" name="PhoneNumber" value="@Model.PhoneNumber">
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.PhoneNumber)</div>
                </div>
                <div class="form-group">
                    <label for="NamePro">Địa chỉ </label>
                    <input type="text" class="form-control" id="NamePro" placeholder="vd: 123 nguyễn tất thành, q12, tp.hcm" name="AddressUser" value="@Model.AddressUser">
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.AddressUser)</div>
                </div>
                <div class="form-group">
                    <label for="NamePro">Mật khẩu  </label>
                    <input type="text" class="form-control" id="NamePro" placeholder="Nhập mật khẩu" name="Pass" value="@Model.Pass">
                    <div class="text-danger">@Html.ValidationMessageFor(model => model.Pass)</div>
                </div>
                <div class="form-group">
                    <label for="ProTypeId">Quyền</label>
                    <select class="form-control" name="RoleId"  id="ProTypeId">
                        @foreach(var item in ViewBag.Roles ){
                            if(item.Id == @Model.RoleId){
                            <option selected value="@item.Id">@item.RoleName</option>

                            }else{
                            <option  value="@item.Id">@item.RoleName</option>

                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mr-2">Chỉnh sửa người dùng</button>
                <a href="~/Admin/User/Index" class="btn btn-light">Trở về</a>
            </form>
        </div>
    </div>
</div>
